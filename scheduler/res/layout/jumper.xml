<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/user_details_activity_general_selector">


	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:gravity="center_vertical"
		android:orientation="vertical">

		<RelativeLayout android:id="@+id/departure"
			android:layout_width="fill_parent" android:layout_height="80dip"
			android:layout_weight="1" android:focusable="true" android:padding="3dip"
			android:background="@drawable/user_details_activity_general_selector">

			<TextView android:id="@+id/departureText"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_centerInParent="true" android:textSize="25dip"
				android:gravity="center_vertical" android:text="Departure Station"
				android:layout_alignParentLeft="true" android:paddingLeft="2dip"
				android:paddingTop="3dip"
				android:textAppearance="@style/TextViewStyleUserDetailsActivityGeneralTitle" />

			<ImageView
				android:layout_width="9dip" android:layout_height="13dip"
				android:src="@drawable/arrow_white" android:scaleType="fitCenter"
				android:layout_marginLeft="3dip" android:layout_marginRight="3dip"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true" />

		</RelativeLayout>

		<RelativeLayout android:id="@+id/arrival"
			android:layout_below="@id/departure" android:layout_width="fill_parent"
			android:layout_height="80dip" android:layout_weight="1"
			android:focusable="true" android:padding="3dip"
			android:background="@drawable/user_details_activity_general_selector">

			<View android:background="@color/white" android:layout_width="fill_parent"
				android:layout_height="1dip"></View>

			<TextView android:id="@+id/arrivalText"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_centerInParent="true" android:textSize="25dip"
				android:gravity="center_vertical" android:text="Arrival Station"
				android:layout_alignParentLeft="true" android:paddingLeft="2dip"
				android:paddingTop="3dip"
				android:textAppearance="@style/TextViewStyleUserDetailsActivityGeneralTitle" />

			<ImageView 
				android:layout_width="9dip" android:layout_height="13dip"
				android:src="@drawable/arrow_white" android:scaleType="fitCenter"
				android:layout_marginLeft="3dip" android:layout_marginRight="3dip"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true" />

		</RelativeLayout>
		<RelativeLayout android:id="@+id/get_schedule" android:layout_alignParentBottom="true"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:focusable="true"
			android:background="@drawable/get_schedule"
			android:padding="3dip">
			<TextView android:text="Get Schedule"
				android:textSize="30dip"
				android:gravity = "center_vertical|center_horizontal"
				android:layout_width="fill_parent" android:textAppearance="@style/TextViewStyleUserDetailsActivityGeneralTitle"  android:layout_height="wrap_content"
				android:padding="10dp" />
				
			<ImageView android:id="@+id/getScheduleChevron"
				android:layout_width="9dip" android:layout_height="13dip"
				android:src="@drawable/arrow_white" android:scaleType="fitCenter"
				android:layout_marginLeft="3dip" android:layout_marginRight="3dip"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true" 
				android:visibility="invisible"/>
		</RelativeLayout>

	</LinearLayout>

</RelativeLayout>