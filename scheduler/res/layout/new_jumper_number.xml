<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/jumper_root" xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:padding="25dip"
	android:layout_height="fill_parent">

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="1">
		<TextView android:text="0" android:gravity="center"
			android:textSize="60dip" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_weight="1" />
		<TextView android:text="1" android:textSize="60dip"
			android:gravity="center" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_weight="1" />
		<TextView android:text="2" android:gravity="center"
			android:textSize="60dip" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_weight="1" />
		<TextView android:text="3" android:gravity="center"
			android:textSize="60dip" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_weight="1" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="1">

		<TextView android:text="4" android:gravity="center"
			android:textSize="60dip" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_weight="1" />
		<TextView android:text="5" android:gravity="center"
			android:textSize="60dip" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_weight="1" />
		<TextView android:text="6" android:gravity="center"
			android:textSize="60dip" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_weight="1" />
		<TextView android:text="7" android:gravity="center"
			android:textSize="60dip" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_weight="1" />

	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="1">


		<TextView android:text="8" android:gravity="center"
			android:textSize="60dip" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_weight="1" />
		<TextView android:text="9" android:gravity="center"
			android:textSize="60dip" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_weight="1" />
		<TextView android:text="A" android:gravity="center"
			android:textSize="60dip" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_weight="1" />
	</LinearLayout>

</LinearLayout>