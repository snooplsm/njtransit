<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:gravity="center" android:background="@drawable/user_details_activity_general_selector">
<ImageView 
   android:id="@+id/test_image"
   android:src="@drawable/large_icon"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   />
   
<LinearLayout android:orientation="horizontal" android:paddingTop="5dip" android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content">

	<TextView android:id="@+id/progressText" android:textSize="20dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="@style/TextViewStyleUserDetailsActivityGeneralTitle" android:text="Preparing database" android:paddingRight="5dip"/>
	<TextView android:id="@+id/progressPercent" android:textSize="20dip" android:layout_width="wrap_content" android:textAppearance="@style/TextViewStyleUserDetailsActivityGeneralTitle" android:layout_height="wrap_content" android:text=""/>

</LinearLayout>
</LinearLayout>