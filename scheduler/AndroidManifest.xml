<?xml version="1.0" encoding="utf-8" standalone="no"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="2010121822"
          android:versionName="2010-12-18" package="com.njtransit.rail">
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="8"/>
    <application android:icon="@drawable/icon" android:label="@string/app_name_full"
                 android:name="com.njtransit.SchedulerApplication" android:theme="@style/OrangeTheme">

        <activity android:configChanges="orientation" android:label="@string/app_name_full"
                  android:name="com.njtransit.StationListActivity" android:screenOrientation="portrait"
                  android:theme="@android:style/Theme.Light">
        </activity>
        <activity android:configChanges="orientation" android:name="com.njtransit.SplashScreenActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity android:configChanges="orientation" android:name="com.njtransit.MainActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:configChanges="orientation" android:name="com.njtransit.StopActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <!--<activity android:name="Prefs" android:screenOrientation="portrait"/>-->
        <!--<service android:name=".service.UpdaterService"/>-->

        <activity android:name="com.google.ads.AdActivity"
              android:configChanges="keyboard|keyboardHidden|orientation"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
</manifest>